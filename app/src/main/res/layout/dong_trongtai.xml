<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/imgHinhTT"

        />
    <TextView
        android:text="Ten TT"
        android:id="@+id/txtTenTT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgHinhTT"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNamSinhTT"
        android:layout_below="@+id/txtTenTT"
        android:layout_toRightOf="@+id/imgHinhTT"
        android:text="TuoiTT"
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        android:textStyle="bold"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txtKinhNgiemTT"
    android:layout_below="@+id/txtNamSinhTT"
    android:layout_toRightOf="@+id/imgHinhTT"
    android:text="KinhNgiemTT"
    android:layout_marginTop="8dp"
    android:textSize="10sp"
    android:textStyle="bold"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTiuenThue"
        android:layout_below="@+id/txtKinhNgiemTT"
        android:layout_toRightOf="@+id/imgHinhTT"
        android:text="TienThue"
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        android:textStyle="bold"
        />

</RelativeLayout>